<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table >
  <tbody>
    <tr>
      <% @items.each do |item| %>
        <div class="col-md-4">
          <td>
            <div class = "image", style: "max-height: 150px;">
              <%= link_to image_tag(item.image_url, :size => '260x180'), item %>
            </div>
            <div><%= item.brand %> <%= item.name %></div>
            <div>$<%= item.price %></div>
            <%= link_to 'Show ', item %>
            <%= link_to 'Edit ', edit_item_path(item) %>
            <%= link_to 'Destroy ', item, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </div>
          <% end %>
    </tr>
  </tbody>
</table>


