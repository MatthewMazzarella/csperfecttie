<% admin = try_spree_current_user.try(:has_spree_role?, "admin") %>
<nav class="col-md-12">
  <div id="main-nav-bar" class="navbar">
    <ul class="nav navbar-nav" data-hook>
        <div class="navbar-header">
          <a class="navbar-brand"<%= link_to "C's Perfect Tie", spree.root_path, id:"color" %></a>
        </div>
      <li id="home-link" data-hook><%= link_to Spree.t(:home), '/welcome' %></li>
      <li id="store-link" data-hook><%= link_to Spree.t(:store), spree.root_path %></li>
      <li id="contact-link" data-hook><%= link_to Spree.t(:contact), '/contact' %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right" data-hook>
      <li id="link-to-cart" data-hook>
        <noscript>
          <%= link_to Spree.t(:cart), '/cart' %>
        </noscript>
        &nbsp;
      </li>
      <li id="link-to-account" data-hook>
        <%= render :partial => 'spree/shared/login_bar'%>
      </li>
      <script>Spree.fetch_cart()</script>
          <% if admin %>
            <li class="link-to-admin">
              <%= tab *Spree::BackendConfiguration::ORDER_TABS, icon: 'shopping-cart' %>
            </li>
          <% end %>
    </ul>

  </div>
</nav>
