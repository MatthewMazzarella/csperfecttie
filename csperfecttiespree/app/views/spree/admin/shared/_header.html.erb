<% admin = try_spree_current_user.try(:has_spree_role?, "admin") %>

<header class="header <%= admin ? "logged-in" : "logged-out" %>">

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="row">
          <div class="navbar-header col-sm-3 col-md-2">
            <div class="navbar-brand">
              <%=link_to( "C's Perfect Tie", spree.admin_path, id: "color" ) %>
            </div>
        </div>

        <% if admin %>
          <div class="col-sm-9 col-md-10">
            <div class="nav navbar-nav navbar-right" data-hook>
              <div class="anav">
              <li id="store-link" data-hook>
                <%= link_to Spree.t(:Back_to_Store), spree.root_path %>
              </li>
              <li id="link-to-account" data-hook>
                <%= render :partial => 'spree/shared/login_bar'%>
              </li>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </nav>

</header>
